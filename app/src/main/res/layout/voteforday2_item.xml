        <Spinner
            android:id="@+id/edithinttemppp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_20ssp"
            android:background="@drawable/grey_resource"
            android:drawableEnd="@drawable/arrowdown"
            android:drawableRight="@drawable/arrowdown"
            android:fontFamily="@font/poppins_semibold"
            android:hint=""
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ViewTomorrow"
            app:layout_constraintTop_toBottomOf="@id/textentertempvalue"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="30dp" />


        <View
            android:id="@+id/ViewTomorrow"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textentertempvalue" />

        <TextView
            android:id="@+id/textSelectlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Select City"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintLeft_toRightOf="@id/ViewTomorrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/texttemptomorrow" />


        <TextView
            android:id="@+id/editSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/grey_resource"
            android:drawableEnd="@drawable/arrowdown"
            android:drawableRight="@drawable/arrowdown"
            android:drawablePadding="@dimen/_10ssp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_10ssp"
            android:paddingBottom="@dimen/_7sdp"
            android:text="Select"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toRightOf="@+id/ViewTomorrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textentertempvalue"
            tools:ignore="TouchTargetSizeCheck" />




        <TextView
            android:id="@+id/textentrtempvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Enter temp. value"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edithinttemppp" />


        <EditText
            android:id="@+id/edithintemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_20sdp"
            android:paddingRight="@dimen/_10ssp"
            android:drawablePadding="@dimen/_10ssp"
            android:background="@drawable/grey_resource"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Hint : 28"
            android:inputType="number"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ViewTomorrow"
            app:layout_constraintTop_toBottomOf="@id/textentrtempvalue"
            />


        <View
            android:id="@+id/VieTomorrow"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textentrtempvalue" />

        <TextView
            android:id="@+id/textSelectlit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Select precipitation"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintLeft_toRightOf="@id/ViewTomorrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edithinttemppp" />



        <TextView
            android:id="@+id/editSelet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/grey_resource"
            android:drawableEnd="@drawable/arrowdown"
            android:drawableRight="@drawable/arrowdown"
            android:drawablePadding="@dimen/_10ssp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_10ssp"
            android:paddingBottom="@dimen/_7sdp"
            android:text="Select"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toRightOf="@+id/ViewTomorrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSelectlit"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnsubmittomorw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15ssp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/poppins_semibold"
            android:text="Submit"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edithintemp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
