<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/instagram"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgsearchlogopic"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_15ssp"
        android:src="@drawable/searchimg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgsearchlogopictopfive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_28ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/topfiveicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Christian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_15ssp"
        android:text="Christian"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toRightOf="@+id/imgsearchlogopic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Liveinneapolis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:text="Live in Minneapolis"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/dot_icon"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="@dimen/_8ssp"
        android:drawablePadding="@dimen/_5sdp"
        app:layout_constraintLeft_toRightOf="@+id/imgsearchlogopic"
        app:layout_constraintTop_toBottomOf="@id/Christian" />

    <ImageView
        android:id="@+id/dot_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/dot_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Liveinneapolis"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toRightOf="@+id/dot_icon1"
        android:src="@drawable/location_iconmayor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dot_icon1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toRightOf="@+id/location_icon"
        android:gravity="center"
        android:text="Madison"
        android:textSize="@dimen/_8sdp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/location_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dot_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toRightOf="@+id/location_name"
        android:src="@drawable/dot_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/location_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/month_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toRightOf="@+id/dot_icon2"
        android:drawableStart="@drawable/calendra_icon"
        android:drawableLeft="@drawable/calendra_icon"
        android:text="June"
        android:textSize="@dimen/_8sdp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dot_icon2"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:backgroundTint="@color/black"
        android:max="100"
         app:layout_constraintLeft_toRightOf="@+id/imgsearchlogopictopfive"
        app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/Liveinneapolis" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtpersentage"
        android:text="0%"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/Liveinneapolis"
        app:layout_constraintLeft_toRightOf="@+id/ProgressBar"/>


</androidx.constraintlayout.widget.ConstraintLayout>