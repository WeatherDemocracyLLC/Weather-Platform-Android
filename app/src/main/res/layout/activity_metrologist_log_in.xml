<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.metrologistactivity.MetrologistLogInActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/metroresetback">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backimagemetro" />
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imgBatterfly"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/butterflywhite"
                    android:layout_marginBottom="@dimen/_40sdp"
                    app:layout_constraintBottom_toTopOf="@+id/viewLogin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"  />


                <View
                    android:id="@+id/viewLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/loginbackshape"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewLogin">

                    <TextView
                        android:id="@+id/txtWelcomeToWeather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Welcome to the weather Forecast"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/segoe_ui"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtLoginContinueMetrologist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Sign to Continue"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/segoe_ui"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeToWeather" />

                    <ImageView
                        android:id="@+id/ImgMetrologist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:src="@drawable/emailimgmetrologist"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtLoginContinueMetrologist" />

                    <EditText
                        android:id="@+id/etEmailMetrologist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:hint="Email ID"
                        android:fontFamily="@font/segoe_ui"
                        android:paddingLeft="@dimen/_10ssp"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12ssp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/ImgMetrologist"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtLoginContinueMetrologist" />

                    <ImageView
                        android:id="@+id/LokcerMetrologist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:src="@drawable/padlockimg"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etEmailMetrologist" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etPasswordLogIn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:boxCollapsedPaddingTop="0dp"
                        app:errorEnabled="false"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:layout_constraintLeft_toRightOf="@+id/LokcerMetrologist"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etEmailMetrologist"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/red"
                        app:startIconTint="@null">
                        <EditText
                            android:id="@+id/etPasswordSignIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:hint="Password"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:fontFamily="@font/segoe_ui"
                            android:paddingLeft="@dimen/_10ssp"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toRightOf="@+id/LokcerMetrologist"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etEmailMetrologist" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/txtForGotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Forgot Password?"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/segoe_ui"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etPasswordLogIn" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/BtnLiginmetrologist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="@drawable/metroshapebutton"
                        android:text="Sign In"
                        android:fontFamily="@font/segoe_ui"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        app:layout_constraintTop_toBottomOf="@+id/txtForGotPassword" />

                    <TextView
                        android:id="@+id/txtHaveanAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:text="Donâ€™t have an account"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:fontFamily="@font/segoe_ui"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/BtnLiginmetrologist" />

                    <TextView
                        android:id="@+id/txtSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:text="Sign Up?"
                        android:fontFamily="@font/segoe_ui"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toRightOf="@+id/txtHaveanAccount"
                        app:layout_constraintTop_toBottomOf="@+id/BtnLiginmetrologist" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>