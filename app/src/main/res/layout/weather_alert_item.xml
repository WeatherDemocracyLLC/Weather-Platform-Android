<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5ssp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notification_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/appicon" />

    <TextView
        android:id="@+id/weatherAlert_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_toRightOf="@+id/notification_image"
        android:fontFamily="@font/segoe_ui"
        android:text=""
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@+id/weatherAlert_txt"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_toRightOf="@+id/notification_image"
        android:fontFamily="@font/segoe_ui"
        android:text=""
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@+id/title"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_toRightOf="@+id/notification_image"
        android:fontFamily="@font/segoe_ui"
        android:text=""
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/timeAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@+id/message"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_toRightOf="@+id/notification_image"
        android:fontFamily="@font/segoe_ui"
        android:text=""
        android:textSize="@dimen/_10sdp" />
    <View
        android:id="@+id/view_lime"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/timeAlert"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@color/grey" />
</RelativeLayout>

