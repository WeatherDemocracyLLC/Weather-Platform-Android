<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/votinglistimage"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/edit_profileicon" />

    <TextView
        android:id="@+id/votername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toRightOf="@+id/votinglistimage"
        android:fontFamily="@font/poppins_semibold"
        android:text="John Shaw"
        android:textColor="#000000"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/status_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Pending"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_15sdp"
        android:textColor="#000000"
        android:textSize="@dimen/_10sdp"
        />


    <ImageView
        android:id="@+id/dott_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votername"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/votinglistimage"
        android:src="@drawable/dot_icon" />


    <TextView
        android:id="@+id/temperatureindegree"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votername"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_toRightOf="@+id/dott_"
        android:drawablePadding="@dimen/_5sdp"
        android:text="23"
        android:textSize="@dimen/_9sdp" />


    <ImageView
        android:id="@+id/dottt_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperatureindegree"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/votinglistimage"
        android:src="@drawable/dot_icon" />

    <TextView
        android:id="@+id/tvspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperatureindegree"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_toRightOf="@+id/dottt_"
        android:drawablePadding="@dimen/_3sdp"
        android:text="High"
        android:textSize="@dimen/_9sdp" />

    <ImageView
        android:id="@+id/dot_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperatureindegree"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/dottt_"
        android:src="@drawable/dot_icon" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperatureindegree"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_toRightOf="@+id/dot_"
        android:drawablePadding="@dimen/_3sdp"
        android:text="21-sep"
        android:textSize="@dimen/_9sdp" />


    <TextView
        android:id="@+id/typeofspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votername"
        android:layout_marginLeft="@dimen/_38sdp"
        android:layout_toRightOf="@+id/dott_"
        android:drawableLeft="@drawable/locationicon2"
        android:drawablePadding="@dimen/_3sdp" />


    <TextView
        android:id="@+id/locationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votername"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_toRightOf="@+id/typeofspeed"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Madison"
        android:textSize="@dimen/_9sdp" />



    <View
        android:id="@+id/view_lime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/date"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#E8E8E8" />

</RelativeLayout>
