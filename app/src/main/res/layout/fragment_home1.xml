<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backscreenshape">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainthome1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imghomemenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/homemenu" />

        <TextView
            android:id="@+id/textBarcelona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableRight="@drawable/homevector"
            android:drawablePadding="@dimen/_20sdp"
            android:fontFamily="@font/segoe_ui"
            android:text="Barcelona, Spain"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintLeft_toRightOf="@id/imghomemenu"
            app:layout_constraintTop_toTopOf="parent" />
        <!--<TextView
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:background="@drawable/homevector"
            app:layout_constraintLeft_toRightOf="@id/textBarcelona"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/_10sdp"
            />-->
        <ImageView
            android:id="@+id/imgnotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/notificationicon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15ssp"
        app:layout_constraintTop_toBottomOf="@+id/constrainthome1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="#24FFFFFF"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="28&#xb0;"
            android:textColor="@color/white"
            android:textSize="@dimen/_50sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imghomesunriselogo"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@drawable/sunpic"
            app:layout_constraintLeft_toRightOf="@id/text"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgrain"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/rainpic"
            app:layout_constraintLeft_toRightOf="@id/text"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgellips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:srcCompat="@drawable/ic_ellipse_2" />

        <TextView
            android:id="@+id/textsunntday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/segoe_ui"
            android:text="Sunny day"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@id/imgellips"
            app:layout_constraintTop_toBottomOf="@+id/text" />

        <ImageView
            android:id="@+id/imgellips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/_5ssp"
            app:layout_constraintLeft_toRightOf="@id/textsunntday"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:srcCompat="@drawable/ic_ellipse_2" />

        <TextView
            android:id="@+id/textfeellike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/segoe_ui"
            android:text="Feel Like 32"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@id/imgellips2"
            app:layout_constraintTop_toBottomOf="@+id/text" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainthome8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout5" />

    <ImageView
        android:id="@+id/imgwindhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20ssp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout5"
        app:srcCompat="@drawable/windhomeicon" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="13km/h"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/imgwindhome"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout5" />

    <ImageView
        android:id="@+id/imghomeicone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout5"
        app:srcCompat="@drawable/homeicon2" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="UV-3"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/imghomeicone2"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout5" />

    <ImageView
        android:id="@+id/imghomeicon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/_35sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout5"
        app:srcCompat="@drawable/homeicon3" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="2%"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout5" />

    <ImageView
        android:id="@+id/imghomeicon4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20ssp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgwindhome"
        app:srcCompat="@drawable/homeicon4" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="13km/h"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/imgwindhome"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <ImageView
        android:id="@+id/imghomeicone3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imghomeicone2"
        app:srcCompat="@drawable/homeicon2" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="UV-3"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/imghomeicone2"
        app:layout_constraintTop_toBottomOf="@id/text2" />

    <ImageView
        android:id="@+id/imghomeicon6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/_35sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imghomeicon3"
        app:srcCompat="@drawable/homeicon3" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="10%"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consntfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text6">

        <TextView
            android:id="@+id/textvoteweather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginTop="20dp"
            android:text="Vote for Weather"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnviewvotes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginTop="15dp"
            android:background="@drawable/homebuttonshape"
            android:fontFamily="@font/segoe_ui"
            android:padding="@dimen/_8sdp"
            android:text="View Votes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textvoteweather" />

        <Button
            android:id="@+id/btnTomorrow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginTop="15dp"
            android:background="@drawable/homebuttonshape"
            android:fontFamily="@font/segoe_ui"
            android:padding="@dimen/_8sdp"
            android:text="Tomorrow"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toRightOf="@id/btnviewvotes"
            app:layout_constraintTop_toBottomOf="@id/textvoteweather" />

        <Button
            android:id="@+id/btnDayaftertomorrow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginTop="15dp"
            android:background="@drawable/homebuttonshape"
            android:fontFamily="@font/segoe_ui"
            android:padding="@dimen/_8sdp"
            android:text="Day after tomorrow"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toRightOf="@id/btnTomorrow"
            app:layout_constraintTop_toBottomOf="@id/textvoteweather" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/framlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/backscreenshape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/consntfragment" />
</androidx.constraintlayout.widget.ConstraintLayout>