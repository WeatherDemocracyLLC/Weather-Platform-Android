<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativechangepwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backscreenshape"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.ChangePasswordActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/weather_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_4sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/password_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/lockicon" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayoutchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/password_icon1"
                android:fontFamily="@font/publicsans_regular"
                android:hint="@string/text_old_password"
                android:inputType="textPassword"
                app:layout_constraintTop_toTopOf="parent"
                app:passwordToggleDrawable="@drawable/icon_selector"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/buttonBlueTitleBarColor">


                <EditText
                    android:id="@+id/oldpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_semibold"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/password_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textinputlayoutchange"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/lockicon" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayoutnewpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textinputlayoutchange"
                android:layout_toRightOf="@+id/password_icon1"
                android:fontFamily="@font/publicsans_regular"
                android:hint="@string/text_new_password"
                android:inputType="textPassword"
                android:textSize="@dimen/_10ssp"
                app:passwordToggleDrawable="@drawable/icon_selector"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/buttonBlueTitleBarColor">

                <EditText
                    android:id="@+id/newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_semibold"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/password_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textinputlayoutnewpwd"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/lockicon" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayoutConform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textinputlayoutnewpwd"
                android:layout_toEndOf="@+id/password_icon1"
                android:fontFamily="@font/publicsans_regular"
                android:hint="@string/text_confirm_password"
                android:inputType="textPassword"
                android:textSize="@dimen/_10ssp"
                app:passwordToggleDrawable="@drawable/icon_selector"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/buttonBlueTitleBarColor">

                <EditText
                    android:id="@+id/conformpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_semibold"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnchangepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textinputlayoutConform"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/text_change_passoword"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>