<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/usersImages"
            android:layout_width="40dp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/edit_profileicon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TxtUserNamess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text=" @LinneaWarner"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintLeft_toRightOf="@+id/usersImages"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/dot_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:text="1 day Ago"
            android:id="@+id/txtCommentdate"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintLeft_toRightOf="@+id/TxtUserNamess"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Hey! Check out this"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/txtCommentes"
            app:layout_constraintLeft_toRightOf="@+id/usersImages"
            app:layout_constraintTop_toBottomOf="@+id/TxtUserNamess" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>