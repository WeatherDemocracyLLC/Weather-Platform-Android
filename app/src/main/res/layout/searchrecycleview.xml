<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgsearchlogopichome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:src="@drawable/mayorimg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Christianhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:text="Christian"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toRightOf="@+id/imgsearchlogopichome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Liveinneapolishome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:text="Live in Minneapolis"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toRightOf="@+id/imgsearchlogopichome"
        app:layout_constraintTop_toBottomOf="@id/Christianhome" />

    <ImageView
        android:id="@+id/imguseraddlinehome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_20ssp"
        android:src="@drawable/useraddline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewlinesearch"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_10ssp"
        android:background="#E8E8E8"
        app:layout_constraintTop_toBottomOf="@id/Liveinneapolishome" />
</androidx.constraintlayout.widget.ConstraintLayout>