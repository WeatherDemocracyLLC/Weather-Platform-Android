<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AddGalleryFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/backscreenshape">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:text="Create Post"
           android:layout_marginTop="@dimen/_10ssp"
           android:textColor="@color/white"
           android:layout_marginLeft="@dimen/_10sdp"
           android:textAllCaps="false"
           android:fontFamily="@font/poppins_semibold"
           android:id="@+id/txtCreatepost"
           android:textSize="@dimen/_15ssp"/>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:cardElevation="@dimen/_10sdp"
           app:layout_constraintBottom_toBottomOf="parent"
           android:background="@color/white"
           android:layout_margin="@dimen/_10sdp"
           app:cardCornerRadius="@dimen/_5sdp"
           app:layout_constraintTop_toBottomOf="@+id/txtCreatepost">
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:layout_constraintTop_toTopOf="parent">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="0dp"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_height="@dimen/_100sdp"
               android:background="@color/viewclr"
               android:id="@+id/LayoutGallery"
               android:elevation="@dimen/_3sdp"
               android:layout_marginRight="@dimen/_10sdp"
               app:layout_constraintRight_toLeftOf="@+id/ViewGallery"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="@dimen/_15ssp"
               android:layout_marginLeft="@dimen/_10sdp"
               app:layout_constraintTop_toTopOf="parent">
               <ImageView
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   android:id="@+id/ImgGallery"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/galleryicon"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:textSize="@dimen/_10sdp"
                   android:textAllCaps="false"
                   android:text="Upload From Gallery"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:fontFamily="@font/poppins_semibold"
                   app:layout_constraintTop_toBottomOf="@+id/ImgGallery"/>
           </androidx.constraintlayout.widget.ConstraintLayout>



           <View
               android:layout_width="1dp"
               android:layout_height="1dp"
               android:id="@+id/ViewGallery"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="0dp"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_height="@dimen/_100sdp"
               android:background="@color/viewclr"
               android:id="@+id/LayoutCamera"
               android:elevation="@dimen/_3sdp"
               android:layout_marginRight="@dimen/_10sdp"
               app:layout_constraintLeft_toRightOf="@+id/ViewGallery"
               android:layout_marginTop="@dimen/_15ssp"
               android:layout_marginLeft="@dimen/_10sdp"
               app:layout_constraintTop_toTopOf="parent">
               <ImageView
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   android:id="@+id/ImgCamera"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:src="@drawable/cameraimg"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:textSize="@dimen/_10sdp"
                   android:textAllCaps="false"
                   android:text="Upload From Camera"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:fontFamily="@font/poppins_semibold"
                   app:layout_constraintTop_toBottomOf="@+id/ImgCamera"/>
           </androidx.constraintlayout.widget.ConstraintLayout>

               <ImageView
                   android:id="@+id/ImgUploadImgSignup"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:minHeight="1dp"
                   android:shadowRadius="10"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:src="@drawable/profileicons"
                   tools:layout_editor_absoluteX="87dp"
                   android:visibility="gone"
                   tools:layout_editor_absoluteY="284dp" />
           </androidx.constraintlayout.widget.ConstraintLayout>
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

           </androidx.constraintlayout.widget.ConstraintLayout>




       </androidx.cardview.widget.CardView>
   </androidx.constraintlayout.widget.ConstraintLayout>

</layout>