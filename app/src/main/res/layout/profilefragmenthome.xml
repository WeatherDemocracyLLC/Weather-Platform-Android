    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUserPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
   android:layout_marginTop="@dimen/_305sdp"
        >

        <ImageView
            android:id="@+id/ImgLikes"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/iv_fill_heart"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/iv_like"
            android:id="@+id/imgdisloke"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_15sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imgComment"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_316sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/iv_comment"
        app:layout_constraintLeft_toRightOf="@+id/layoutUserPost"

         />


    <ImageView
        android:id="@+id/share_button"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_17sdp"
        android:src="@drawable/iv_send"
        android:layout_marginTop="@dimen/_316sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@+id/imgComment"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        />


    <TextView
        android:id="@+id/TxtLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Likes |"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgComment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="20 Comments"
        android:textColor="@color/black"
        android:id="@+id/txtPostComments"
        app:layout_constraintLeft_toRightOf="@+id/TxtLike"
        app:layout_constraintTop_toBottomOf="@+id/imgComment" />

    <TextView
        android:id="@+id/txtComments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtLike" />

    <TextView
        android:id="@+id/txtdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text=""

        app:layout_constraintTop_toBottomOf="@+id/txtComments" />

    <View
        android:id="@+id/lline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/txtdates" />


</androidx.constraintlayout.widget.ConstraintLayout>