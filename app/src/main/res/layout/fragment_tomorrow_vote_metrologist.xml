<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.fragment.votemetrologist.TomorrowVoteFragmentMetrologist">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_cons1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:background="@drawable/homepagebackgroundshape"
        android:padding="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/texttemptomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Select High or Low Temprature"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/editselecttemprature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:background="@drawable/grey_resource"
            android:drawableEnd="@drawable/arrowdown"
            android:drawableRight="@drawable/arrowdown"
            android:hint="Select Temprature"
            android:inputType="text"
            android:maxLines="1"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texttemptomorrow"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="30dp" />

        <TextView
            android:id="@+id/textentertempvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:text="Enter temp. value"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editselecttemprature" />

        <EditText
            android:id="@+id/edithinttemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/grey_resource"
            android:hint="Hint : 28"
            android:fontFamily="@font/poppins_semibold"
            android:inputType="number"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ViewTomorrow"
            app:layout_constraintTop_toBottomOf="@id/textentertempvalue"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:id="@+id/ViewTomorrow"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textentertempvalue" />

        <TextView
            android:id="@+id/textSelectlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Select precipitation"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintLeft_toRightOf="@id/ViewTomorrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editselecttemprature" />

        <TextView
            android:id="@+id/editSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/grey_resource"
            android:drawableEnd="@drawable/arrowdown"
            android:drawableRight="@drawable/arrowdown"
            android:drawablePadding="@dimen/_10ssp"
            android:paddingLeft="@dimen/_10ssp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_10ssp"
            android:paddingBottom="@dimen/_7sdp"
            android:text="Select"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toRightOf="@+id/ViewTomorrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textentertempvalue"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnsubmittomorw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15ssp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/metroshapebutton"
            android:text="Submit"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editSelect" />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ImgViewUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/viewuservoteimg"
            app:layout_constraintTop_toBottomOf="@+id/id_cons1" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutSendWeathrAlart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@+id/ImgViewUser">

            <ImageView
                android:id="@+id/ImgSendwearherAlartBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:scaleType="fitXY"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/sendweatheralartimg"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ImgSendwearherAlart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/alartimg"
                app:layout_constraintBottom_toTopOf="@+id/txtsenWeather"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/txtsenWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Weather Alert"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:fontFamily="@font/segoe_ui"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification!!!"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:fontFamily="@font/segoe_ui"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtsenWeather" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>