<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Toolbats"
        android:background="@color/contacttoolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainthome1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:inputType="text"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:drawableRight="@drawable/homevector"
                android:drawablePadding="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@+id/imghomemenu"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imghomemenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/homemenu" />


            <FrameLayout
                android:id="@+id/notification_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/imgnotification"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@drawable/notificationicon"
                    android:contentDescription="@string/notification" />

                <TextView
                    android:id="@+id/tv_notification_count"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end|top"
                    android:background="@drawable/bg_badge"
                    android:gravity="center"
                    android:text="13"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:visibility="gone" />
            </FrameLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
</layout>