<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.HomeinstaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/personicon" />

            <TextView
                android:id="@+id/textdavidshaww"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_toEndOf="@+id/iv_icon"
                android:text="David Shaw"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:id="@+id/imgdavidshawmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12ssp"
                app:srcCompat="@drawable/davidshawmail" />

            <TextView
                android:id="@+id/textdavidshawemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textdavidshaww"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15ssp"
                android:layout_toEndOf="@+id/imgdavidshawmail"
                android:text="David_shaw@gmail.com"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:id="@+id/imgdavidshawlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgdavidshawmail"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_13ssp"
                app:srcCompat="@drawable/locationicon" />

            <TextView
                android:id="@+id/textdavidshawMadison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textdavidshawemail"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15ssp"
                android:layout_toEndOf="@+id/imgdavidshawlocation"
                android:text="Madison"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:id="@+id/imgdavidshawtaskdavid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgdavidshawlocation"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10ssp"
                app:srcCompat="@drawable/taskdaivdshaw" />

            <TextView
                android:id="@+id/textlastactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textdavidshawMadison"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_15ssp"
                android:layout_toEndOf="@+id/imgdavidshawtaskdavid"
                android:text="Last active 15 May 2021, 14:30"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintLeft_toRightOf="@id/imgdavidshawmail"
                app:layout_constraintTop_toBottomOf="@id/textdavidshawMadison" />

            <RelativeLayout
                android:id="@+id/constraintfollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textlastactive"
                android:layout_marginLeft="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#3279E3"
                android:padding="@dimen/_5ssp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/imgFollowhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        app:srcCompat="@drawable/followiconwhite" />

                    <TextView
                        android:id="@+id/textFollowhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/imgFollowhome"
                        android:text="Follow"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/constraintchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textlastactive"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15ssp"
                android:background="#3279E3"
                android:padding="@dimen/_5ssp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/imgchat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/chaticon" />

                    <TextView
                        android:id="@+id/textChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/imgchat"
                        android:text="Chat"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/viewinsta1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/constraintfollow"
                android:layout_marginTop="@dimen/_10ssp"
                android:background="#E8E8E8" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleviewhomeinsta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>