<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5ssp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notification_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/appicon" />

    <TextView
        android:id="@+id/notification_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:layout_toLeftOf="@+id/right"
        android:layout_toRightOf="@+id/notification_image"
        android:fontFamily="@font/segoe_ui"
        android:text="Congratulation you have won the 25th April2021 Weather voting"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txt_datetimenoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_alignParentRight="true"

        android:layout_toLeftOf="@+id/right"
        android:layout_below="@+id/notification_txt"

        android:fontFamily="@font/segoe_ui"
        android:text=""
        android:textSize="@dimen/_10sdp" />


    <ImageView
        android:id="@+id/cross"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_10sdp"
        android:src="@drawable/ic_cross"

        />

    <ImageView
        android:id="@+id/right"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/cross"
        android:src="@drawable/ic_tick" />



    <View
        android:id="@+id/view_lime"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/txt_datetimenoti"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@color/grey" />
</RelativeLayout>