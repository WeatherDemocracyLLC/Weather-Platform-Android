<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layoutnew">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_10sdp"
            android:id="@+id/CardviewImages"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:id="@+id/instapic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/instapic1"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textlorem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:text="adipiscing it, sed do eiusmod tempor incididunt... more "
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_italic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/CardviewImages"/>
        <TextView
            android:id="@+id/textLinkUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:text="adipiscing it, sed do eiusmod tempor incididunt... more "
            android:textColor="@color/toolbaar"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/textlorem"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/CardviewImages"/>
        <TextView
            android:id="@+id/textlink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:text="Click to read"
            android:textColor="@color/buttonBlueTitleBarColor"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/poppins_italic"
            android:maxLength="50"
            app:layout_constraintTop_toBottomOf="@+id/textlorem"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/CardviewImages"/>
        <TextView
            android:id="@+id/textdecription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:text="adipiscing it, sed do eiusmod tempor incididunt... more "
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/poppins_italic"
            android:maxLength="50"
            app:layout_constraintTop_toBottomOf="@+id/textlink"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/CardviewImages"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/layoutnew"
        android:layout_marginTop="@dimen/_7sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>