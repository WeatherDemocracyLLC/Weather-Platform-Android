<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IMgGirl"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/edit_profileicon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="David Shaw"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:fontFamily="@font/segoe_ui"
            app:layout_constraintLeft_toRightOf="@+id/IMgGirl"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtcelcalcius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="28"
            android:drawableLeft="@drawable/grycirclre"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/segoe_ui"
            app:layout_constraintLeft_toRightOf="@+id/IMgGirl"
            app:layout_constraintTop_toBottomOf="@+id/Names" />

        <TextView
            android:id="@+id/txtHighrani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableLeft="@drawable/grycirclre"
            android:drawablePadding="@dimen/_5sdp"
            android:text="High"
            android:fontFamily="@font/segoe_ui"
            app:layout_constraintLeft_toRightOf="@+id/txtcelcalcius"
            app:layout_constraintTop_toBottomOf="@+id/Names" />

        <TextView
            android:id="@+id/txtRaini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text=",Rainy"
            android:drawableLeft="@drawable/grycirclre"
            android:fontFamily="@font/segoe_ui"
            app:layout_constraintLeft_toRightOf="@+id/IMgGirl"
            app:layout_constraintTop_toBottomOf="@+id/txtcelcalcius" />
        <ImageView
            android:id="@+id/imgTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableLeft="@drawable/grycirclre"
            android:drawablePadding="@dimen/_10sdp"
            android:src="@drawable/tempimg"
            app:layout_constraintLeft_toRightOf="@+id/txtRaini"
            app:layout_constraintTop_toBottomOf="@+id/txtcelcalcius" />

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Madison"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/segoe_ui"
            app:layout_constraintStart_toEndOf="@+id/imgTemp"
            app:layout_constraintTop_toBottomOf="@+id/txtcelcalcius" />

        <ImageView
            android:id="@+id/imgVotingList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/cloudying"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/dayLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>