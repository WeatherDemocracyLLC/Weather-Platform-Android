<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/back_image" />

    <ImageView
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_39sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/metrologisticonrecycle" />

    <TextView
        android:id="@+id/image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Amit Chaudhary"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/image_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_name"
        android:layout_marginLeft="@dimen/_10ssp"
        app:layout_constraintLeft_toRightOf="@+id/image"
        android:drawableLeft="@drawable/dot_icon"
        android:drawablePadding="@dimen/_5sdp"
        android:text="Amit chaudhary"
        android:textSize="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/dot_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_name"
        app:layout_constraintLeft_toRightOf="@+id/image_name2"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/dot_icon" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_name"
        android:layout_below="@+id/image_name"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintLeft_toRightOf="@+id/dot_icon1"
        android:src="@drawable/location_iconmayor" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_name"
        android:layout_toRightOf="@+id/location_icon"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/location_icon"
        android:text="Madison"
        android:textSize="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/dot_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/image_name"
        app:layout_constraintLeft_toRightOf="@+id/location_name"
        android:src="@drawable/dot_icon" />

    <TextView
        android:id="@+id/month_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_name"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintLeft_toRightOf="@+id/dot_icon2"
        android:drawableStart="@drawable/calendra_icon"
        android:drawableLeft="@drawable/calendra_icon"
        android:text="June"
        android:textSize="@dimen/_10sdp" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/image_name2"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_5sdp"
        android:backgroundTint="@color/black"
        android:max="100"
        android:progress="0"
        app:layout_constraintRight_toLeftOf="@+id/txtpersentage"
        app:layout_constraintLeft_toRightOf="@+id/image"
        android:secondaryProgressTint="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_name2"
        android:text="10/100"
        android:id="@+id/txtpersentage"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_5sdp"

        app:layout_constraintLeft_toRightOf="@+id/ProgressBar"
        >

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>