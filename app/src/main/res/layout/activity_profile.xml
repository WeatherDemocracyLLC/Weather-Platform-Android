<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ProfileActivity">

    <ImageView
        android:id="@+id/imgprofilebackcolor"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#3279E3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profie"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_20ssp"
        android:src="@drawable/maskpic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginRight="@dimen/_20ssp"
        android:src="@drawable/crossicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textdavidshawprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:text="David Shaw"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintLeft_toRightOf="@id/profie"
        app:layout_constraintTop_toTopOf="@id/profie" />

    <TextView
        android:id="@+id/shaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10ssp"
        android:text="david_shaw"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toRightOf="@id/profie"
        app:layout_constraintTop_toBottomOf="@id/textdavidshawprofile" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgprofilebackcolor"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10ssp"
                android:background="#F7F5F3"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>