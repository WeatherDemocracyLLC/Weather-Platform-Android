<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backscreenshape">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rl_main"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        android:background="@drawable/backscreenshape"
                        android:layout_marginBottom="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ProgressBar
                            android:id="@+id/ivLoader"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_50sdp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:visibility="gone"
                            />
                        <!--<androidx.cardview.widget.CardView
                            android:id="@+id/today"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="@dimen/_35sdp"
                            app:cardCornerRadius="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                        <TextView
                            android:id="@+id/todayTemprature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/black"

                            />
                        </androidx.cardview.widget.CardView>-->

                        <TextView
                            android:id="@+id/poweredby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Powered by "
                            android:textColor="@color/gray2"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            app:layout_constraintLeft_toLeftOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                            />
                        <ImageView
                            android:id="@+id/iccuIocn"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@drawable/accu_icon"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:layout_constraintLeft_toRightOf="@+id/poweredby"
                            />


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/seeAll"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="7-day weather"
                            android:textSize="@dimen/_10sdp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:background="@drawable/homepagebtnshapeinner"
                            android:fontFamily="@font/poppins_semibold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />


                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_40ssp"
                            android:layout_marginRight="@dimen/_60ssp"
                            android:text="32\u2103"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_50ssp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.379"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.41" />

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/imghomesunriselogo"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_50sdp"
                            app:layout_constraintLeft_toRightOf="@+id/text"
                            app:layout_constraintTop_toTopOf="parent" />

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/imgrain"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_65sdp"
                            app:layout_constraintLeft_toRightOf="@+id/text"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textsunntday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:drawableLeft="@drawable/ic_ellipse_2"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/segoe_ui"
                            android:text=" "
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/ViewWeather" />


                        <View
                            android:id="@+id/ViewWeather"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />




                        <TextView
                            android:id="@+id/textfeellike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:drawableLeft="@drawable/ic_ellipse_2"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/segoe_ui"
                            android:text=" "
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/ViewWeather"
                            app:layout_constraintTop_toBottomOf="@+id/imgrain" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sevenday_layout"
                        app:layout_constraintTop_toBottomOf="@+id/rl_main"
                        >
                        <View
                            android:id="@+id/whitespace"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/white"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                           />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sevenday_forecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/whitespace"

                        />
                        <View

                            android:id="@+id/whitespace2"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/white"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/sevenday_forecast"


                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constrainthome8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/sevenday_layout">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/windhomeicon"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="13km/h"
                            android:textColor="@color/white"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:drawableLeft="@drawable/homeicon2"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="UV-3"
                            android:textColor="@color/white"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/homeicon3"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="2%"
                            android:textColor="@color/white"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constrainthom9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/constrainthome8">


                        <ImageView
                            android:id="@+id/imghomeicon4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/homeicon4" />

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_toEndOf="@+id/imghomeicon4"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="13km/h"
                            android:textColor="@color/white"
                            app:layout_constraintLeft_toRightOf="@+id/imghomeicon4"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imghomeicone3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_24sdp"
                            android:layout_toEndOf="@+id/text4"
                            android:adjustViewBounds="true"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"

                            app:srcCompat="@drawable/homeicon2" />

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toEndOf="@+id/imghomeicone3"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="UV-3"
                            android:textColor="@color/white"
                            app:layout_constraintLeft_toRightOf="@+id/imghomeicone3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imghomeicon6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:layout_constraintRight_toLeftOf="@+id/text6"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/homeicon3" />

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="2%"
                            android:textColor="@color/white"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/consntfragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/constrainthom9">

                        <TextView
                            android:id="@+id/textvoteweather"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10ssp"
                            android:fontFamily="@font/poppins_semibold"
                             android:textColor="@color/white"
                            android:maxLines="2"
                            app:layout_constraintEnd_toStartOf="@+id/forecast_cardview"
                            android:layout_marginRight="@dimen/_15sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="@dimen/_12sdp"
                           />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/forecast_cardview"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="@dimen/_35sdp"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            >
                        <TextView
                            android:id="@+id/textforecastchallenege"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_15ssp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"
                            android:lines="2"
                            android:background="@color/white"
                            android:text="Forecast Challenge"
                           />

                        </androidx.cardview.widget.CardView>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5ssp"
                            app:layout_constraintTop_toBottomOf="@+id/forecast_cardview">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnViewVote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/homepagebtnshapeinner"
                                android:fontFamily="@font/poppins_semibold"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingRight="@dimen/_15sdp"
                                android:text="View Votes"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnTomorrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/homepagebtnshapeinner"
                                android:fontFamily="@font/poppins_semibold"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingRight="@dimen/_15sdp"
                                android:text="Tomorrow"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btndayAfterTomorrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/homepagebtnshapeinner"
                                android:fontFamily="@font/poppins_semibold"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingRight="@dimen/_15sdp"
                                android:text="Day after \n tomorrow"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

                        <TextView
                            android:id="@+id/txtNodata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="No Data"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>